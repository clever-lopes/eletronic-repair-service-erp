<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Service orders" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Service orders</h1>
    <%= link_to "New service order", new_service_order_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="service_orders" class="min-w-full">
    <% @service_orders.each do |service_order| %>
      <%= render service_order %>
      <p>
        <%= link_to "Show this service order", service_order, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
