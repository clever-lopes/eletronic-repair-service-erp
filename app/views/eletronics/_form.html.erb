<%= form_with(model: eletronic, class: "contents") do |form| %>
  <% if eletronic.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(eletronic.errors.count, "error") %> prohibited this eletronic from being saved:</h2>

      <ul>
        <% eletronic.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :Número_de_série %>
    <%= form.text_field :serial_number, class: "block shadow rounded-md border border-gray-400 outline-none focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :modelo %>
    <%= form.text_field :model, class: "block shadow rounded-md border border-gray-400 outline-none focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :quantidade %>
    <%= form.text_field :quantity, class: "block shadow rounded-md border border-gray-400 outline-none focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :cor %>
    <%= form.text_field :color, class: "block shadow rounded-md border border-gray-400 outline-none focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
  <% if EletronicType.any? %>
    <%= form.label :tipo_de_eletrônico %>
    <%= form.select :type_id, EletronicType.order(:name).map { |type| [type.name, type.id] },class: "block shadow rounded-md border border-gray-400 outline-none focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
  <% end %>
  </div>

  <div class="my-5">
    <%= form.label :tipo_de_eletrônico %>
    <%= form.text_field :type_id, class: "block shadow rounded-md border border-gray-400 outline-none focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :acessório %>
    <%= form.select :accessory_id, Accessory.order(:name).map { |accessory| [accessory.name, accessory.id] }, class: "block shadow rounded-md border border-gray-400 outline-none focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :marca %>
    <%= form.select :brand_id, Brand.order(:name).map { |brand| [brand.name, brand.id] }, class: "block shadow rounded-md border border-gray-400 outline-none focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
